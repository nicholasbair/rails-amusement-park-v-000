<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>

<%= @attraction.name %>

<%= form_for @ride do |f| %>
  <%= f.hidden_field(:attraction_id, :value => params[:id]) %>
  <%= f.hidden_field(:user_id, :value => current_user.id) %>
  <%= f.submit 'Go on this ride' %>
<% end %>
